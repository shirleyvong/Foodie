<% include ./partials/header %>

<div class="container">
    <div class="row flex-nowrap">
        <!-- Left side of page for nav -->
        <div class="col-sm-1 d-none d-sm-flex side-arrow-wrapper">
            <h3 class="arrow">&lt;</h3>
        </div>

        <!-- Center of page -->
        <div class="col dish-show-center-col">
            <div class="row header-row">
                <div class="col header-wrapper">
                    <h1 class="header"><%= restaurant.name %></h1>
                </div>
            </div>        
            
            <div class="dish-show-body">
                <div class="row-auto">
                    <img class="dish-show-img" src="<%= dish.image %>">
                </div>
                <div class="row-auto dish-show-title">
                    <h3><%= dish.name %></h3>
                    <h3>$<%= dish.price %></h3>
                </div>
                <div class="row-auto dish-show-comment">
                    <p><%= dish.comment %></p>
                </div>
                
                <% if (currentUser && currentUser.username === user) { %>
                    <div class="row-auto dish-show-btn-row">
                        <button type="button" class="header-btn" data-toggle="modal" data-target="#edit-dish" >
                            Edit
                        </button>
                        <button type="button" class="header-btn" data-toggle="modal" data-target="#delete-dish" >
                            Delete
                        </button>
                    </div>
                <% } %>
            </div>
        </div>

        <!-- Right side of page for nav -->
        <div class="col-sm-1 d-none d-sm-flex side-arrow-wrapper">
            <h3 class="arrow">&gt;</h3>
        </div>
    </div>
    
    <!-- Nav buttons for smaller viewports -->
    <div class="row p-3">
        <div class="col d-block d-sm-none">
            <div class="d-flex bottom-arrow-wrapper">
                <h3 class="arrow">&lt;</h3>
                <h3 class="arrow">&gt;</h3>
            </div>
        </div>
    </div>

    <% if (currentUser && currentUser.username === user) { %>
        <!-- Modal to edit dish -->
        <div class="modal fade" id="edit-dish" tabindex="-1" role="dialog">
            <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Edit</h5>
                        <button type="button" class="close" data-dismiss="modal">
                        <span>&times;</span>
                        </button>
                    </div>
                    <form action="/diary/<%= user %>/restaurants/<%= restaurant._id %>/dishes/<%= dish._id %>?_method=PUT" method="POST">
                        <div class="modal-body">
                            <div>Name:</div>
                            <input type="text" name="dish[name]" value="<%= dish.name %>" required><br>
                            <div>Image:</div>
                            <input type="url" name="dish[image]" value="<%= dish.image %>" required><br>
                            <div>Price:</div>
                            <input type="number" name="dish[price]" min="0.01" step="0.01" value="<%= dish.price %>" required><br>    
                            <div>Comment:</div>
                            <textarea name="dish[comment]" maxlength="240" cols="40" rows="6" required><%= dish.comment %></textarea><br>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn modal-btn-close" data-dismiss="modal">Close</button>
                            <button type="submit" class="btn modal-btn-action">Save changes</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- Modal to delete dish -->
        <div class="modal fade" id="delete-dish" tabindex="-1" role="dialog">
            <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLongTitle">Delete</h5>
                        <button type="button" class="close" data-dismiss="modal">
                        <span>&times;</span>
                        </button>
                    </div>
                    <form action="/diary/<%= user %>/restaurants/<%= restaurant._id %>/dishes/<%= dish._id %>?_method=DELETE" method="POST">
                        <div class="modal-body">
                            Are you sure you would like to delete this dish?
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn modal-btn-close" data-dismiss="modal">Close</button>
                            <button type="submit" class="btn modal-btn-action">Delete</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    <% } %>
</div>

<% include ./partials/footer %>
