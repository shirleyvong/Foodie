<div class="modal fade" id="edit-post" tabindex="-1" role="dialog">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Edit</h5>
        <button type="button" class="close" data-dismiss="modal">
          <span>&times;</span>
        </button>
      </div>
      <form action="/<%= user %>/diaries/<%= diary._id %>/posts/<%= post._id %>?_method=PUT" method="POST">
        <div class="modal-body">
          <div>Image:</div>
          <input type="url" name="image" value="<%= post.image %>" required>
          <br>
          <div>Comment:</div>
          <textarea name="comment" maxlength="240" cols="40" rows="6" required><%= post.comment %></textarea>
          <br>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn modal-btn-close" data-dismiss="modal">Close</button>
          <button type="submit" class="btn modal-btn-action" readonly>Save changes</button>
        </div>
      </form>
    </div>
  </div>
</div>