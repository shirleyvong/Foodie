<% include ../partials/header %>

<div class="container">
    <div class="row header-row">
        <div class="col-md-auto header-wrapper">
            <h1 class="header"><%= restaurant.name %></h1>
        </div>

        <% if (currentUser && currentUser.username === user) { %>
            <div class="col-md-auto header-wrapper">
                <button type="button" class="header-btn" data-toggle="modal" data-target="#new-dish">
                    New dish
                </button>

                <button type="button" class="header-btn" data-toggle="modal" data-target="#edit-dish">
                    Edit restaurant
                </button>

                <button type="button" class="header-btn" data-toggle="modal" data-target="#delete-dish">
                    Delete restaurant
                </button>
            </div>
        <% } %>
    </div>

    <!-- Grid to display dishes from restaurant -->
    <div class="row">
        <div class="dish-grid">
            <% restaurant.dishes.forEach(d => { %>
                <div class="dish-grid-item">
                    <a href="/diary/<%= user %>/restaurants/<%= restaurant._id %>/dishes/<%= d._id %>">
                        <div class="dish-grid-item-wrapper">
                            <img class="dish-grid-item-img" src="<%= d.image %>"> 
                            <div class="dish-grid-item-overlay">
                                <div class="dish-grid-item-name"><%= d.name %></div>
                            </div>
                        </div>
                    </a>
                </div>
            <% }) %>
        </div>
    </div>
</div>

<% if (currentUser && currentUser.username === user) { %>
   <!-- Modal to add new dish  -->
   <div class="modal fade" id="new-dish" tabindex="-1" role="dialog">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Add new dish</h5>
                    <button type="button" class="close" data-dismiss="modal">
                        <span>&times;</span>
                    </button>
                </div>
                <form action="/diary/<%= user %>/restaurants/<%= restaurant._id %>/dishes" method="post">
                    <div class="modal-body">                            
                        <div>Name:</div>
                        <input id="name" type="text" name="name"><br>
                        <div>Image URL:</div>
                        <input type="url" name="image"><br>
                        <div>Price:</div>
                        <input type="number" name="price" min="0.01" step="0.01"><br>    
                        <div>Comment:</div>
                        <textarea type="text" name="comment" rows="10"></textarea><br>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn modal-btn-close" data-dismiss="modal">Close</button>
                        <button type="submit" class="btn modal-btn-action">Add</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    
    <!-- Modal to edit restaurant -->
    <div class="modal fade" id="edit-dish" tabindex="-1" role="dialog">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Edit restaurant</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span>&times;</span>
                    </button>
                </div>
                <form action="/diary/<%= user %>/restaurants/<%= restaurant._id %>?_method=PUT" method="POST">
                    <div class="modal-body">
                        <div>Restaurant name:</div>
                        <input type="text" name="restaurant[name]" value="<%= restaurant.name %>">
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn modal-btn-close" data-dismiss="modal">Close</button>
                        <button type="update" class="btn modal-btn-action">Save</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    
    <!-- Modal to delete restaurant -->
    <div class="modal fade" id="delete-dish" tabindex="-1" role="dialog">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Delete restaurant</h5>
                    <button type="button" class="close" data-dismiss="modal">
                        <span>&times;</span>
                    </button>
                </div>
                <form action="/diary/<%= user %>/restaurants/<%= restaurant._id %>/?_method=DELETE" method="POST">
                    <div class="modal-body">
                        Are you sure you would like to delete this restaurant?
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn modal-btn-close" data-dismiss="modal">Close</button>
                        <button type="submit" class="btn modal-btn-action">Delete</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
<% } %>

   
<% include ../partials/footer %>

