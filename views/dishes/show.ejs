<% include ../partials/header %>

<div class="container">
        <div class="row flex-nowrap">
            <div class="col-sm-1 d-none d-sm-flex justify-content-center align-items-center">
                <h3 class="arrow">&lt;</h3>
            </div>

            <div class="col d-flex flex-column align-items-center dish-show-col-wrapper">
                <div class="row w-100 header align-items-center justify-content-between mb-4">
                    <div class="col text-center my-3 ">
                        <h1 class="m-2"><%= restaurant.name %></h1>
                    </div>
                </div>        
                
                <div class="dish-show-content-wrapper">
                    <div class="row-auto">
                        <img class="dish-show-img py-3" src="<%= dish.image %>">
                    </div>
                    <div class="row-auto px-3 d-flex justify-content-between">
                        <h3><%= dish.name %></h3>
                        <h3>$<%= dish.price %></h3>
                    </div>
                    <div class="row-auto px-3">
                        <p><%= dish.comment %></p>
                    </div>
                    <div class="row-auto text-center py-3">
                        <button type="button" class="restaurant-btn" data-toggle="modal" data-target="#editDishModal" >
                            Edit
                        </button>
                        <button type="button" class="restaurant-btn" data-toggle="modal" data-target="#deleteDishModal" >
                            Delete
                        </button>
                    </div>
                </div>
            </div>

            
            <div class="col-sm-1 d-none d-sm-flex justify-content-center align-items-center">
                <h3 class="arrow">&gt;</h3>
            </div>
        </div>
    
        <div class="row p-3">
            <div class="col d-block d-sm-none text-center arrows-row">
                <div class="d-flex justify-content-between">
                    <h3 class="arrow">&lt;</h3>
                    <h3 class="arrow">&gt;</h3>
                </div>
            </div>
        </div>

        <div class="modal fade" id="editDishModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLongTitle">Edit</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <form action="/restaurants/<%= restaurant._id %>/<%= dish._id %>?_method=PUT" method="POST">
                        <div class="modal-body">
                            <div>Name:</div>
                            <input type="text" name="dish[name]" value="<%= dish.name %>"><br>
                            <div>Image:</div>
                            <input type="url" name="dish[image]" value="<%= dish.image %>"><br>
                            <div>Price:</div>
                            <input type="number" name="dish[price]" min="0.01" step="0.01" value="<%= dish.price %>"><br>    
                            <div>Comment:</div>
                            <textarea name="dish[comment]" maxlength="240" cols="40" rows="6"><%= dish.comment %></textarea><br>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn modal-btn-close" data-dismiss="modal">Close</button>
                            <button type="submit" class="btn modal-btn-action">Save changes</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="modal fade" id="deleteDishModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLongTitle">Delete</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <form action="/restaurants/<%= restaurant._id %>/<%= dish._id %>?_method=DELETE" method="POST">
                        <div class="modal-body">
                            Are you sure you would like to delete this dish?
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn modal-btn-close" data-dismiss="modal">Close</button>
                            <button type="submit" class="btn modal-btn-action">Delete</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

</div>

<% include ../partials/footer %>
