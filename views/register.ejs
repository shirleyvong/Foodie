<% include ./partials/header %>

<div class="container">
    <div class="login-container">
        <h3>Create a new account</h3>
        <form id="register-form" action="/register" method="POST">
            <input class="form-control" id="reg-username" type="text" name="username" placeholder="username"><br>
            <input class="form-control" id="reg-password" type="password" name="password" placeholder="password"><br>
            <input class="form-control" id  ="reg-confirm-password" type="password" name="confirm-password" placeholder="confirm password"><br>
            <p class="missing-input-msg"></p>
            <input class="btn modal-btn-action" onclick="validate()" value="Register" readonly></input>
        </form>
    </div>
</div>           

<script type="text/javascript" src="js/register.js"></script>
<% include ./partials/footer %>